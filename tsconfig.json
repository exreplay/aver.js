{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom", "es2015"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "removeComments": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@averjs/*": [ "packages/@averjs/*/lib" ]
    }
  },
  "include": [
    "packages/@averjs/*/lib",
    "packages/@averjs/*.d.ts",
    "scripts/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "packages/@averjs/babel-preset-app/lib",
    "node_modules"
  ]
}
{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom", "es2015"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "removeComments": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true
  },
  "include": [
    "packages/@averjs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*.ts",
    "**/__mocks__/**/*.ts",
    "**/__fixtures__/**/*.ts"
  ]
}